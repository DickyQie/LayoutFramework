<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidapi">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.RecyclerViewActivity"></activity>
        <activity android:name=".ui.RecyclerViewPullActivity"></activity>
        <activity android:name=".ui.CardViewActivity"></activity>
        <activity android:name=".ui.RecycleViewUIActivity"></activity>
    </application>

</manifest>